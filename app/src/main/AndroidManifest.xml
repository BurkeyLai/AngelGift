<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.angelgift">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AngelGift">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".InputDataActivity"
            android:label="InputData Activity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.AngelGift.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.angelgift.MainActivity" />
        </activity>
        <activity
            android:name=".ClassSelectionActivity"
            android:label="@string/title_activity_class_selection"
            android:parentActivityName=".InputDataActivity"
            android:theme="@style/Theme.AngelGift.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.angelgift.InputDataActivity" />
        </activity>
    </application>

</manifest>